package mySelfProgramming2;
import java.util.Scanner;

public class Unlockthephonepassword {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		for(int x =5; x >= 0; x--) {
			System.out.println("Enter your phone pin number: ");
			int a = scan.nextInt();
			int pass = 223399;
			if(a == pass) {
				System.out.println("Correct!");
			
			break;
			
			}else
				System.out.println("Your pin is invalid! You have "+ x +" chance. \nPlease Enter again. ");
			System.out.println();
			
			if(x == 0) {
				System.out.println("Sorry, you need to call your phone centre to reset your pin number.");
				
			}
			}
			
			
		}
		
	}


